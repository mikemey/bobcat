<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="CONSOLE_LOG_PATTERN" value="%d [%thread] %-5level %logger{50}: %msg%n" />

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
		</encoder>
	</appender>
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>

	<logger name="uk.mm.bobcat" level="DEBUG" />
	<logger name="uk.mm.bobcat.interceptors" level="WARN" />
	<logger name="uk.mm.bobcat.controller.CommonDataController" level="WARN" />
</configuration>